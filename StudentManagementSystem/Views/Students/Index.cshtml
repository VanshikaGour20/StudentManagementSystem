@model IEnumerable<StudentManagementSystem.Models.Student>
@{
    ViewBag.Title = "Students";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">🎓 Student Records</h2>
        <a class="btn btn-success" href="@Url.Action("Create", "Students")">
            <i class="bi bi-plus-circle"></i> Add Student
        </a>
    </div>

    <table id="studentsTable" class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Roll No</th>
                <th>Full Name</th>
                <th>Course</th>
                <th>Email</th>
                <th class="text-center" style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.rollNo</td>
                    <td>@s.fullName</td>
                    <td>@s.course</td>
                    <td>@s.email</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Students", new { id = s.id })">
                            <i class="bi bi-eye"></i> View
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "Students", new { id = s.id })">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Students", new { id = s.id })"
                               onclick="return confirm('Are you sure you want to delete this student?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#studentsTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "responsive": true,
                "columnDefs": [
                    { "orderable": false, "targets": 4 } // disable sorting on Actions column
                ]
            });
        });
    </script>
}
